server {
    listen 80;
    server_name localhost;

    root /home/username/Documents/whiteboardApp-main; # Root directory for HTML files

    index WhiteBoard.html;

    location /static {
        # Serve static files
        # Example: /static/somefile.css will map to /home/username/Documents/whiteboardApp-main/static/somefile.css
        try_files $uri =404;
    }

    location / {
        # Proxy requests to backend servers
        proxy_pass http://whiteboard;
        try_files $uri $uri/ /WhiteBoard.html;
    }
}

upstream whiteboard {
    # Define backend servers
    server localhost:8000;
    server localhost:8001;
    server localhost:8002;
}
